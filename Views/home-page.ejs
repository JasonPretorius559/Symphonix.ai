<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Chat Interface</title>
    <link rel="stylesheet" href="/home-page-styling.css">
    <link rel="stylesheet" href="dropdown.css">
</head>
<body>
    <div class="dropdown-container">
        <div class="dropdown">
            <button class="dropbtn">
                <img src="/image-data/flm-green-logo.png" alt="Logo" class="logo">
            </button>
            <div class="dropdown-content">
                <div id="userInfo" class="typewriter">User Info</div>
                <!-- Buttons will be aligned in a row to the right -->
                <a href="#" class="common-button" id="logoutOption">Logout</a>
                
                <!-- Add any other buttons you want here -->
            </div>
        </div>
    </div>
    
    


    <!-- Chat Container -->
    <div class="chat-container">
        <!-- Chat Sidebar -->
        <aside class="chat-sidebar">
            <h2>Chats</h2>
            <button id="newChatButton">New Chat</button>
            <ul id="chatList">
                <% if (chats && chats.length > 0) { %>
                    <% chats.forEach(chat => { %>
                        <li data-chat-id="<%= chat.chat_id %>" class="chat-item">
                            <span><%= chat.name %></span>
                            <button class="delete-chat" data-chat-id="<%= chat.chat_id %>"></button>
                        </li>
                    <% }); %>
                <% } else { %>
                    <li>No chats available.</li>
                <% } %>
            </ul>
        </aside>

        <!-- Main Chat Area -->
        <div class="chat-main-container">
            <main class="chat-main">
                <div class="messages" id="messagesContainer">
                    <!-- Messages will be dynamically inserted here via JavaScript -->
                </div>
            </main>

            

            <!-- Chat Input -->
            <div class="input-container">
                <textarea id="messageInput" placeholder="Type your message..." rows="1"></textarea>
                <button id="sendButton"></button>
                <div id="sendSpinner" style="display:none;">
                    <i class="fa fa-spinner fa-spin"></i>
                </div>
            </div>
        </div>
    </div>

    <div id="spinnerContainer" style="display: none;">
        <div class="message-spinner"></div>
    </div>


    <!-- JavaScript Files -->
    <script src="/javascript/home-page-javascript.js"></script>
    <script src="/javascript/user-info.js"></script>
</body>
</html>
