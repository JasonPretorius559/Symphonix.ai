<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Chat Interface</title>
    <link rel="stylesheet" href="/home-page-styling.css">
</head>
<body>
    <!-- Logo as a Dropdown Button -->
    <div class="dropdown">
        <button class="dropbtn">
            <img src="/image-data/flm-green-logo.png" alt="User Info" class="logo" id="logo">
        </button>
        <div class="dropdown-content">
            <div id="userInfo">
                <!-- User info will be injected here via JavaScript -->
            </div>
            <a href="#" id="logoutOption" class="common-button">Logout</a>
        </div>
    </div>


    <!-- Chat Container -->
    <div class="chat-container">
        <!-- Chat Sidebar -->
        <aside class="chat-sidebar">
            <h2>Chats</h2>
            <button id="newChatButton">New Chat</button>
            <ul id="chatList">
                <% if (chats && chats.length > 0) { %>
                    <% chats.forEach(chat => { %>
                        <li data-chat-id="<%= chat.chat_id %>" class="chat-item">
                            <span><%= chat.name %></span>
                            <button class="delete-chat" data-chat-id="<%= chat.chat_id %>">Delete</button>
                        </li>
                    <% }); %>
                <% } else { %>
                    <li>No chats available.</li>
                <% } %>
            </ul>
        </aside>

        <!-- Main Chat Area -->
        <div class="chat-main-container">
            <main class="chat-main">
                <div class="messages" id="messagesContainer">
                    <!-- Messages will be dynamically inserted here via JavaScript -->
                </div>
            </main>

            

            <!-- Chat Input -->
            <footer class="chat-footer">
                <div class="input-container">
                    <input type="text" id="messageInput" placeholder="Type your message...">
                    <button id="sendButton">Send</button>
                    <div id="sendSpinner" style="display:none;">
                        <i class="fa fa-spinner fa-spin"></i>
                    </div>
                </div>
            </footer>
        </div>
    </div>

    <div id="spinnerContainer" style="display: none;">
        <div class="message-spinner"></div>
    </div>


    <!-- JavaScript Files -->
    <script src="/javascript/home-page-javascript.js"></script>
    <script src="/javascript/user-info.js"></script>
</body>
</html>
