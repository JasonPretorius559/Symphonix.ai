<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Chat Interface</title>
    <link rel="stylesheet" href="/home-page-styling.css">
</head>
<body>
    <nav class="navbar">
        <!-- <img src="/image-data/flm-white-logo.png" alt="Logo" class="logo"> -->
        <h1>Symphonix.ai</h1>
        <div class="dropdown">
            <button class="dropbtn">
                <img src="/image-data/flm-green-logo.png" alt="User Info">
            </button>
            <div class="dropdown-content">
                <div id="userInfo">
                    <!-- User info will be injected here -->
                </div>
                <a href="#" id="logoutOption">Logout</a>
            </div>
        </div>
    </nav>
    <div class="chat-container">
        <aside class="chat-sidebar">
            <h2>Chats</h2>
            <button id="newChatButton">New Chat</button>
            <ul id="chatList">
                <% if (chats && chats.length > 0) { %>
                    <% chats.forEach(chat => { %>
                        <li data-chat-id="<%= chat.id %>" class="chat-item">
                            <span><%= chat.name %></span>
                            <button class="delete-chat" data-chat-id="<%= chat.id %>">Delete</button>
                        </li>
                    <% }); %>
                <% } else { %>
                    <li>No chats available.</li>
                <% } %>
            </ul>
        </aside>
        <div class="chat-main-container">
            <main class="chat-main">
                <div class="messages">
                    <!-- Messages will be dynamically inserted here -->
                </div>
            </main>
            <footer class="chat-footer">
                <div class="input-container">
                    <input type="text" id="messageInput" placeholder="Type your message...">
                    <button id="sendButton">Send</button>
                    <div id="sendSpinner" style="display:none;">
                        <!-- Spinner icon here, e.g., a CSS animated spinner or a FontAwesome spinner icon -->
                        <i class="fa fa-spinner fa-spin"></i>
                    </div>
                </div>
            </footer>
        </div>
    </div>
    <script src="/javascript/home-page-javascript.js"></script>
    <script src="/javascript/user-info.js"></script>
</body>
</html>
